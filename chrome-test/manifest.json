{
  "manifest_version": 3,
  "name": "My Chrome Test",
  "version": "1.0",
  "description": "Adds a blue border to google.com",

  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },
  
  "host_permissions": [
    "https://*.google.com/*"
  ]
}