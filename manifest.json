{
  "manifest_version": 3,
  "name": "My First Chrome Extension",
  "version": "1.0",
  "description": "Adds a blue border to Google.com",

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "host_permissions": [
    "https://*.google.com/*"
  ]
}