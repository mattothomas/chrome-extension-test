{
  "manifest_version": 3,
  "name": "Borderify",
  "version": "1.0",
  "description": "Adds a red border to mozilla.org pages.",

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["./borderify.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}